<aura:component implements="lightning:availableForFlowScreens,flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes" >
	
    <!-- input parameters -->
    <aura:attribute name="srcURL" type="String" default="/resource/rcDiagram_bitmap" />
    <aura:attribute name="width" type="String" default="100%"/>
    <aura:attribute name="height" type="String" default="600px"/>
    
    <!-- body -->
    <iframe src="{!v.srcURL}" width="{!v.width}" height="{!v.height}" 
            allowfullscreen="true" style="border:none" />
    
</aura:component>